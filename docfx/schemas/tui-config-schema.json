    },
    "Key": {
      "description": "A key pressed on the keyboard.",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "Key": {
              "description": "A key name (e.g. A, b, 1, 2, Enter, Esc, F5, etc.) or an integer value (e.g. 65, 66, 67, etc.).",
              "oneOf": [
                {
